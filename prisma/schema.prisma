// learn more about it in the docs: https://pris.ly/d/prisma-schema

/**
 * Generator for the Prisma Client.
 * Output is redirected to a custom 'generated' folder for better modularity.
 */
generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

/**
 * Database connection details.
 * Sourced from the DATABASE_URL environment variable.
 */
datasource db {
  provider = "postgresql"
}

/**
 * User Profile model.
 * Stores account metadata and links to authentication components and application content.
 */
model User {
  id            String    @id
  name          String
  email         String
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  sessions      Session[]
  accounts      Account[]
  workspaces    Workspace[]

  @@unique([email])
  @@map("user")
}

/**
 * Session model for Better Auth.
 * Tracks active browser sessions and maps them back to users.
 */
model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

/**
 * Account model for Better Auth.
 * Handles OAuth links (e.g. Google) and credential-based login storage.
 */
model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

/**
 * Verification model for email tokens and password resets.
 */
model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

/**
 * Workspace model.
 * The core entity of the application. Stores all JSON-blob data for 
 * Documents, Canvas, and Kanban boards associated with a specific user.
 */
model Workspace {
  id String @id @default(uuid())
  userId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  name String
  /** Rich text content stored as JSONB */
  documentData Json?
  /** Canvas shapes and state stored as JSONB */
  canvasData Json?
  /** Kanban board list/card structure stored as JSONB */
  kanbanBoard Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}
